pragma solidity ^0.8.9; // Specificeert versie voor compiler


contract Stoken { // Definieert naam contract 
    address public owner; // Specificeert type en visability variabele
    
    // Initieert toestandsvariabelen
    // Code uitgevoerd wanneer contract gemaakt of op blockchain gezet
    // Geen arguments binnen parameters, dus sprake van een Default constructor 
    constructor() { 
        owner = msg.sender; // Adres van degene die transactie verzendt, omdat 'deployen' een soort transactie is de message sender in dit geval ons public adres
    }
}
